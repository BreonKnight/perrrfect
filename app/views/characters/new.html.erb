<div class="container">
  <div class="row">
    <h3 class="center-align">New Character</h3>
      <%= form_for @character do |f| %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label(:name, "Character Name") %>
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <%= f.label(:avatar, "Avatar") %>
            <%= f.file_field :avatar %>
          </div>
        </div>
        <div class="row">
          <div class="col s7 push-s5">
            <%= f.submit "New Character", class: "btn black" %>
          </div>
      <% end %>
        </div>
  </div>
</div>
