<div class="container">
  <div class="row">
    <h3 class="center-align">Edit Character</h3>
      <%= form_for @character, url: patch_path, method: "patch" do |f| %>
        <div class="input-field col s12">
          <%= f.label(:name, "Character Name") %>
          <br>
      	  <%= f.text_field :name %>
        </div>
    </div>
  <div class="row">
    <div class="input-field col s6">
      <%= f.label(:avatar, "Avatar") %>
      <br>
      <br>
      <br>
      <%= f.file_field :avatar %>
    </div>
  </div>
  <div class="row">
    <div class="col s7 push-s5">
      <%= f.submit "Update Profile", class: "btn black" %>
    </div>
    <% end %>
  </div>
</div>
