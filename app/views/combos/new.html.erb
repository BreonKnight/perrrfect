  </div> -->
  <div class="row center-align white">
    <h3 class="center-align blue-text">Combo Name</h3>
    <div class="col s12">
      <%= form_for @combo, url: game_character_combos_path do |f| %>
        <%= f.label(:combo_name, "Combo Name", class:"red-text") %>
        <%= f.text_field :combo_name %>
        <%= f.text_field :move, hidden: false, :id => 'combo-form' %>
    </div>
  </div>
  <div class="row red">
    <div class="col s7 push-s5">
      <%= submit_tag("Save Combo", class:"btn blue") %>

    </div>
          <% end %>
  </div>
