<div class="container">
  <h1 class="center-align">New Game</h1>
  <div class="row">
    <%= form_for @game do |f| %>
      <div class="input-field col s6">
        <%= f.label(:title, "Game Title") %>
        <br>
      	<%= f.text_field :title %>
        <br>
      </div>
      <div class="input-field col s6">
        <%= f.label(:avatar, "Avatar") %>
        <br>
        <br>
        <%= f.file_field :avatar %>
        <br>
      </div>
  </div>
  <div class="row">
    <div class="col s7 push-s5 valign-wrapper">
      <%= f.submit "New Game", class: "btn  black" %>
    </div>
  </div>
  <% end %>
</div>
