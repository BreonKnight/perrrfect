<div class="container">
  <h3 class="card blue black-text">Sign up</h3>
  <%= form_for @user do |f| %>
    <div class="row white">
      <div class="col s6">
        <%= f.label(:first_name, "First Name", class:"blue-text") %>
        <%= f.text_field :first_name, placeholder: "First Name" %>
      </div>
      <div class="col s6">
        <%= f.label(:last_name, "Last Name", class:"blue-text") %>
        <%= f.text_field :last_name, placeholder: "Last Name" %>
      </div>
    </div>
    <div class="row white">
      <div class="col s6">
        <%= f.label(:name, "User Name", class:"blue-text") %>
        <%= f.text_field :name, placeholder: "User Name" %>
      </div>
      <div class="col s6">
        <%= f.label(:twitch_name, "Twitch User Name", class:"blue-text") %>
        <%= f.text_field :twitch_name, placeholder: "Twitch User Name" %>
      </div>
    </div>
    <div class="row white">
      <div class="col s6">
        <%= f.label(:email, "Email", class:"blue-text") %>
        <%= f.text_field :email, placeholder: "Email" %>
      </div>
      <div class="col s6">
        <%= f.label(:password, "Password", class:"blue-text") %>
        <%= f.password_field :password, placeholder: "Password" %>
      </div>
    </div>

      <div class="row">
        <div class="col s6">
          <%= f.label(:avatar, "Upload an avatar", class:"blue-text") %>
          <br>
          <%= f.file_field :avatar %>
        </div>
      </div>
      <div class="row">
        <div class="col s7 push-s5">
          <%= f.submit "Sign Up", class: "btn black" %>
        </div>
      </div>
  <% end %>

</div>
