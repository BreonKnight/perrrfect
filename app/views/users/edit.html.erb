<div class="container">
  <div class="row">
      <h3 class="center-align">Edit Your Account</h3>
        	<%= form_for @user do |f| %>
            <div class="input-field col s6">
              <%= f.label(:first_name, "First Name") %>
              <br>
      				<%= f.text_field :first_name %>
              <br>
            </div>
            <div class="input-field col s6">
              <%= f.label(:last_name, "Last Name") %>
              <br>
              <%= f.text_field :last_name %>
              <br>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.label(:last_name, "Twitch User Name") %>
              <br>
              <%= f.text_field :twitch_name %>
            </div>
          </div>
            <div class="row">
              <div class="input-field col s6">
                <p>
                  Avatar
                </p>
                <%= f.file_field :avatar %>
              </div>
              <div class="col s6">
                <p>
                  Update Profile
                </p>
                <%= f.submit "Update Profile", class: "btn black" %>
              </div>

            </div>
            <% end %>
    </div>
  </div>
</div>
