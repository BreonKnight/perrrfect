<div class="container">
  <div class="row">
    <form class="col s12">
      <div class="row">
        	<%= form_for @user do |f| %>
          <div class="input-field col s6">
            <%= f.label(:first_name, "First Name") %>
    				<%= f.text_field :first_name, class: "validate" %>
          </div>
          <div class="input-field col s6">
            <%= f.label(:last_name, "Last Name") %>
            <%= f.text_field :last_name, class: "validate" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label(:avatar, "Avatar") %>
    				<%= f.file_field :avatar %>
          </div>
        </div>
        <div class="row">
          <%= f.label(:twitch_name, "Twitch Name") %>
          <%= f.text_field :twitch_name, class: "validate" %>
        </div>
        <%= f.submit "Update Profile", class: "btn" %>
        <% end %>
    </form>
  </div>
</div>
