<div class="container">
  <div class="row">
    <h3 class="center-align">Edit Your Account</h3>
      <%= form_for @user do |f| %>
        <div class="input-field col s6">
          <%= f.label(:first_name, "First Name") %>
      	  <%= f.text_field :first_name %>
        </div>
        <div class="input-field col s6">
          <%= f.label(:last_name, "Last Name") %>
          <%= f.text_field :last_name %>
        </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.label(:last_name, "Twitch User Name") %>
      <%= f.text_field :twitch_name %>
    </div>
    </div>
  <div class="row">
    <div class="input-field col s6">
      <%= f.label(:avatar, "Avatar") %>
      <%= f.file_field :avatar %>
    </div>
  </div>
  <div class="row">
    <div class="col s7 push-s5">
      <%= f.submit "Update Profile", class: "btn black" %>
    </div>
    <% end %>
  </div>
</div>
